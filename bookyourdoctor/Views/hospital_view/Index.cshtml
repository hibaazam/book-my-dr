@model IEnumerable<bookyourdoctor.hospital_view>
@{
    ViewBag.Title = "Index";
}
model bookyourdoctor.doctor
@{
    ViewBag.Title = "Create";
}
<head>
    <style type="text/css">

        body {
            background-image: url(../images/qqq.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            height: 1700px;
        }

        .registration {
            color: black;
            font-size: 40px;
            font-family: Agency FB;
            font-weight: 700;
            border-bottom-style: ridge;
        }

        .row {
        }

        .btn.hover {
            background-color: aqua;
        }

        label {
            font-size: 22px;
        }

        .btn-danger {
            border-radius: 0px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3" id=" form" style=" background-color: #acbdca;height:0% 100%;opacity:0.9;

    ">
                <center style="text-align:center ;
	padding-top: 60px;padding-bottom:60px"><b class="registration">HOSPITALS</b></center>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.hospital_end_time)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.hospital_start_time)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.patient_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Hospital_day)
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.hospital_end_time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hospital_start_time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.patient_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hospital_day)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
}
                </table>
            </div>
        </div>
    </div>
</body>


