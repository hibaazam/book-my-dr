@model IEnumerable<bookyourdoctor.doctor>
@{
    ViewBag.Title = "Index";
}
<head>
    <style type="text/css">

        body {
            background-image: url(../images/qqq.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            height: 1700px;
        }

        .registration {
            color: black;
            font-size: 40px;
            font-family: Agency FB;
            font-weight: 700;
            border-bottom-style: ridge;
        }

        .row {
        }

        .btn.hover {
            background-color: aqua;
        }

        label {
            font-size: 22px;
        }

        .btn-danger {
            border-radius: 0px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2" id=" form" style=" background-color: #acbdca;height:0% 100%;opacity:0.9;

    ">
                <center style="text-align:center ;
	padding-top: 60px;padding-bottom:60px"><b class="registration">DOCTORS</b></center>
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.name)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.phone)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.email)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.clinic_name)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.hospital_name)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.specialization)
                        </th>

                        <th></th>
                    </tr>
                    @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.clinic_name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.hospital_name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.specialization)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", "doctors", new { ide = item.doctor_id }, null) |
                    @Html.ActionLink("View Details", "viewDetails", "doctors", new { ide = item.doctor_id }, null) |
                    @Html.ActionLink("Delete", "Delete", "doctors", new { ide = item.doctor_id }, null)
                </td>
            </tr>
}
                </table>
            </div>
        </div>
    </div>
</body>



